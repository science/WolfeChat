{
  "name": "wolfechat",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "test": "node run-tests.mjs",
    "test:browser": "npx playwright test --project=nonlive",
    "test:browser-live": "npx playwright test --project=live",
    "test:regression": "npx playwright test --project=live-regression",
    "pretest:live": "vite build",
    "test:live": "node run-tests.mjs --live",
    "test:all": "bash -c 'node run-tests.mjs; UNIT=$?; npx playwright test; PW=$?; exit $((UNIT + PW))'",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "@tsconfig/svelte": "^3.0.0",
    "@types/jsdom": "^21.1.7",
    "autoprefixer": "^10.4.13",
    "esbuild": "^0.25.9",
    "fast-glob": "^3.3.3",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.21",
    "svelte": "^3.55.1",
    "svelte-check": "^2.10.3",
    "svelte-preprocess": "^5.1.3",
    "tailwindcss": "^3.2.7",
    "ts-node": "^10.9.2",
    "tslib": "^2.5.0",
    "typescript": "^4.9.3",
    "vite": "^4.1.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.64.0",
    "idb": "^8.0.0",
    "openai": "^3.2.1",
    "prismjs": "^1.30.0",
    "puppeteer": "^22.6.1",
    "sse.js": "^0.6.1",
    "svelte-markdown": "^0.2.3"
  },
  "volta": {
    "node": "18.20.5",
    "npm": "10.2.4"
  }
}
